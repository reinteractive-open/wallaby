<% if value.nil? %>
  <%= null %>
<% else %>
  <% max    = metadata[:max] || 20 %>
  <% value  = value.to_s %>
  <% if value.length > max %>
    <code><%= value.truncate max %></code>
    <%= imodal metadata[:label], "<pre>#{ h value }</pre>".html_safe %>
  <% else %>
    <code><%= value %></code>
  <% end %>
<% end %>
